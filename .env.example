# Neptune Apex Configuration
APEX_HOST=192.168.1.100
APEX_USERNAME=admin
APEX_PASSWORD=1234

# InfluxDB 3.x Configuration
# Full URL to InfluxDB server (required)
INFLUX_URL=http://localhost:8086
# API token for authentication (required for InfluxDB Cloud, optional for local)
INFLUX_TOKEN=
# Database/bucket name to write to
INFLUX_DATABASE=aquarium

# Legacy config (backwards compatible, only used if INFLUX_URL not set)
# INFLUX_HOST=localhost
# INFLUX_PORT=8086

# Polling interval (cron expression)
# Default: every 5 minutes
POLL_INTERVAL=*/5 * * * *

# Force full sync - set to 'true' to write all records (fills gaps in data)
# InfluxDB will deduplicate existing records automatically
# Use this once to fill gaps, then remove or set to 'false'
# FORCE_FULL_SYNC=true
